#include <iostream>
using namespace std;
int main(){
    int i,n,arr[100],count=0,k;
    cout<<"Enter The number of elements in array: ";
    cin>>n;
    cout<<"Enter the elemets in the array: ";
    for(i=0;i<n;i++){
        cin>>arr[i];
    }
    cout<<"The elements of the array are: ";
    for(i=0;i<n;i++){
        cout<<arr[i]<<" ";
    }
    
    cout<<"\nEnter the elements to be searched: ";
    cin>>k;
    for(i=0;i<n;i++){
        count++;
        if(k==arr[i]){
            break;
        }
    }
    
    cout<<"Element is at the number "<<count<<" oF THE array";
}
